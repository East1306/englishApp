<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ocean_theme">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/FishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/ravenpro_medium"
            android:text="FISH WORD"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/FishImg"
            android:layout_below="@+id/FishText"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/fish_nemo"/>

        <Button
            android:id="@+id/playCorrect_word"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/FishImg"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_custom_fish_correctword"
            android:backgroundTint="#F06B48"
            android:text="Play Now"
            android:textColor="#ffffff"
            android:textSize="24dp" />
    </RelativeLayout>


</LinearLayout>