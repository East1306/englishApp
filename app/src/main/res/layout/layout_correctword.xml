<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_radius_15">

        <TextView
            android:id="@+id/txtstar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#CC000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txttime_correctword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="110dp"
        android:text="00:30"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_ques_custom"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtVN_Question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#CC000000"
            android:textSize="26sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_ques_custom"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtEN_Question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#CC000000"
            android:textSize="26sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_ques_custom"
        android:orientation="horizontal"
        android:padding="20dp">

        <EditText
            android:id="@+id/InputAnswer"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#CC000000 "
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnAnswer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/enter"
            android:backgroundTint="#2196f3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/btnSkip"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/skip"
            android:backgroundTint="#2196f3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Correct answers: "
        android:textSize="25dp"
        android:layout_gravity="center"
        />
</LinearLayout>