<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_correct_theme_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <TextView
            android:id="@+id/txttime_correctword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="30dp"
            android:text="00:30"
            android:textColor="#7C746D"
            android:textSize="32dp"
            android:textStyle="bold|italic" />
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_bg_border_quiz_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#7C746D"
                android:id="@+id/txtstar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="0" />

            <ImageView
                android:paddingTop="5dp"
                android:id="@+id/img_startIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:background="@drawable/bg_correct_vietsub"
        android:id="@+id/txtVN_Question"
        android:layout_marginTop="120dp"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textColor="#CC000000"
        android:text="Sự thật"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:textStyle="bold" >
    </TextView>
    <LinearLayout
        android:background="@drawable/custom_bg_border_quiz_correct"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtEN_Question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#0A5078"
            android:text="R U H T T"
            android:textSize="26sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/custom_bg_border_quiz_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <EditText
            android:id="@+id/InputAnswer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#CC000000 "
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnAnswer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/enter_big"
            android:backgroundTint="#2196f3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/btnSkip"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/skip"
            android:backgroundTint="#2196f3"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Correct answers: 0"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#7C746D"
        android:layout_gravity="center"
        />
</LinearLayout>