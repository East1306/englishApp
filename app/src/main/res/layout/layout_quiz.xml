<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".PhatLe.Activity_Quiz">

    <TextView
        android:id="@+id/grammar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="English Quiz"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:textSize="42dp"
        android:textColor="#2f498c"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_question_quiz"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/TxtCauhoi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="#CC000000"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/RadioGroupTraloi"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="DuplicateIds">

        <RadioButton
            android:id="@+id/RdbA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_bg_border_quiz_correct"
            android:buttonTint="#3959ba"
            android:paddingLeft="30dp"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RdbB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_bg_border_quiz_correct"
            android:buttonTint="#3959ba"
            android:paddingLeft="30dp"
            android:text=""
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RdbC"
            android:buttonTint="#3959ba"
            android:background="@drawable/custom_bg_border_quiz_correct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text=""
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RdbD"
            android:buttonTint="#3959ba"
            android:background="@drawable/custom_bg_border_quiz_correct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text=""
            android:textSize="20sp" />
    </RadioGroup>
    <Button
        android:id="@+id/BtnTraloi"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_bg_border_quiz_correct"
        android:text="Answer"
        android:textColor="#ffffff"
        android:backgroundTint="#0e79b2"
        android:textAllCaps="false"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/TxtKetqua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/BtnTraloi"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

</LinearLayout>
