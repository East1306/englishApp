<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluegradient"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_goback_NumOfQues"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_goback"/>

    <TextView
        android:id="@+id/text"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_goback_NumOfQues"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/white_line"
        android:backgroundTint="#3FB7DB"
        android:text="English Quiz"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3FB7DB"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="Number of questions: "
        android:textColor="#1C1B1B"
        android:textSize="20dp"
        android:textStyle="normal" />

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@+id/text2" />

    <Button
        android:id="@+id/btn_startQuiz"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_level"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text2"
        android:backgroundTint="#3FB7DB"
        android:text="Start"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"/>


</RelativeLayout>