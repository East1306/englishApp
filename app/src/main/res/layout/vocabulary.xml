<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/white_line"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/vocab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vocabulary Quiz"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"
            android:textSize="36dp"
            android:textColor="#2f498c"
            android:textStyle="bold"/>
    </LinearLayout>



    <ImageView
        android:id="@+id/Imgvocabulary"
        android:layout_width="124dp"
        android:layout_height="131dp"
        android:layout_below="@+id/vocab"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/vocabulary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/TxtQuestion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Question ?"
            android:textColor="#3b5eaf"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:text="Time: 10:00"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_ques_custom"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/question1"
            android:textColor="#CC000000"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Txtanswer1"
            android:layout_width="155dp"
            android:layout_height="65dp"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#f4364c"
            android:gravity="center"
            android:text="Answer 1"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Txtanswer3"
            android:layout_width="154dp"
            android:layout_height="65dp"
            android:text="Answer 3"
            android:textSize="25dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#1e8fd5"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Txtanswer2"
            android:layout_width="155dp"
            android:layout_height="65dp"
            android:text="Answer 2"
            android:textColor="@color/white"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#f6be00"
            android:gravity="center"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Txtanswer4"
            android:layout_width="155dp"
            android:layout_height="65dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#30b700"
            android:text="Answer 4"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
